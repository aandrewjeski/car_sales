<h3>Add a Car</h3>

<%= form_for @car do |f| %>

  <% if @car.errors.any? %>
    <ul>
      <% @car.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :manufacturer %>
    <%= f.text_field :manufacturer %>
  </div>

  <div>
    <%= f.label :color %>
    <%= f.text_field :color %>
  </div>

  <div>
    <%= f.label :year %>
    <%= f.text_field :year %>
  </div>

  <div>
    <%= f.label :mileage %>
    <%= f.text_field :mileage %>
  </div>

  <%= f.submit 'Submit' %>
<% end %>
